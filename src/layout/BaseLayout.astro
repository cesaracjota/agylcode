---
// src/layouts/BaseLayout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../assets/app.css";
import logo from '../../public/favicon.svg'
---

<html lang="es" data-theme="forest">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Agyl Code ofrece soluciones profesionales en desarrollo web, sistemas escolares, software empresarial y más. Descubre nuestro portafolio y contáctanos.">
    <meta name="keywords" content="Agyl Code, desarrollo web Perú, software para colegios, sistemas escolares, sistemas web, Node Mongo React">
    <title>Agyl Code</title>
    <link rel="icon" href="/favicon.ico" />

  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <main class="flex-1 max-w-5xl container rounded-xl backdrop-blur-md mx-auto p-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>